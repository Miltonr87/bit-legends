{
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "target": "ES2022",
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "vite.config.ts",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}